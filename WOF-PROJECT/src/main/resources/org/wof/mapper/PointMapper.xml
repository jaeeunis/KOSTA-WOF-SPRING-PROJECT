<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.wof.mapper.PointMapper">

	<insert id="ChargingList" parameterType="org.wof.domain.PointVO">
		insert into POINT(point_id, point_amount, point_contents, point_chg_date)  
		values ('point'||point_seq.nextval, #{point_amount}, #{point_contents}, sysdate)<!-- point_total = #{point_total} -->
	</insert>
	
	<update id="Charging" parameterType="org.wof.domain.MemberVO">
		update MEMBER 
		set total_point = total_point + #{total_point}
		where member_no = #{member_no}
	</update>
	
	<insert id="WithdrawList" parameterType="org.wof.domain.PointVO">
		insert into POINT(point_id, point_amount, point_contents, point_chg_date)  
		values ('point'||point_seq.nextval, -1*#{point_amount}, #{point_contents}, sysdate) <!-- point_balance = #{point_balance} -->
	</insert>
	
	<update id="Withdraw" parameterType="org.wof.domain.MemberVO">
		update MEMBER 
		set total_point = total_point - #{total_point}
		where member_no = #{member_no}
	</update>
	
	<select id="getList" resultType="org.wof.domain.PointVO">
	<![CDATA[
		SELECT point_chg_date "일자", point_contents "내용", point_amount "증감", total_point"잔여포인트" 
		FROM POINT p, MEMBER m
		WHERE p.point_owner = m.member_no
		order by point_id desc ;
		]]>
	</select>
	<!-- bno > 0 and rownum <= 100 -->
	
	
